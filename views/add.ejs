<% include ./partials/header.ejs %>
<title>Add Post</title>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">create a new post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 " type="file" name="postimage"> 
            <input class="text-white block w-1/3 px-3 py-2 border-2 rounded-md mt-3" type="text" name="title" id="" placeholder="Title">
            <textarea class="text-white block w-1/3 h-60 px-3 py-2 border-2 rounded-md mt-3" type="text" name="description" id="" placeholder="Description"></textarea>
            <input class="block w-1/3 px-3 py-2 rounded-md mt-3 bg-red-700" type="submit" value="Create Post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>